---
import Layout from "@/layouts/Layout.astro";
import FormRetreat from "@/sections/FormRetreat.astro";
import { ViewConvivencias } from "@/components/react/ViewConvivencias";
import { HistoryRetreats } from "@/components/react/HistoryRetreat";
import CrossIcon from "@/icons/CrossIcon.astro";
import HistoryIcon from "@/icons/HistoryIcon.astro";
---

<Layout
  title="Convivencias | Comunidad"
  description="GestiÃ³n de convivencias en la plataforma de comunidades."
>
  <main class="main-grid">
    <FormRetreat />
    <section
      class="card-section flex flex-col gap-8"
      transition:name="section-view"
    >
      <div class="ss">
        <header>
          <h2
            class="text-3xl font-semibold mb-4 font-forum flex items-center gap-2"
          >
            <CrossIcon class="size-8 text-neutral-500" />
            <span>Convivencias</span>
          </h2>
        </header>
        <ViewConvivencias client:load />
      </div>
      <div class="ss">
        <header class="mb-4">
          <h2 class="text-3xl font-semibold flex items-center gap-2 font-forum">
            <HistoryIcon class="size-8 text-neutral-500" />
            <span>Historial</span>
          </h2>
          <p class="text-neutral-500 text-sm ml-10">
            Convivencias Finalizadas.
          </p>
        </header>
        <HistoryRetreats client:load />
      </div>
    </section>
  </main>
</Layout>
